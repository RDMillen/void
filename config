font-2 = siji:pixelsize=10;1

modules-left = bspwm
modules-center = mpd 
modules-right = wlan battery date

tray-position = right
tray-padding = 2
;tray-background = #0063ff

;wm-restack = bspwm

override-redirect = true

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title%
label-maxlen = 50

[module/bspwm]
type = internal/bspwm

